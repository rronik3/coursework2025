<Window x:Class="coursework.AddEditRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:coursework"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Title="Додати / Редагувати рецепт" Height="400" Width="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel>
            <TextBox Name="TitleBox" materialDesign:HintAssist.Hint="Назва рецепту" Margin="0,5"/>
            <TextBox Name="CategoryBox" materialDesign:HintAssist.Hint="Категорія" Margin="0,5"/>
            <TextBox Name="CookingTimeBox" materialDesign:HintAssist.Hint="Час приготування" Margin="0,5"/>
            <TextBox Name="IngredientsBox" materialDesign:HintAssist.Hint="Інгредієнти" Margin="0,5"/>
            
            <!-- Прокрутка для опису -->
            <ScrollViewer VerticalScrollBarVisibility="Auto" Height="100" Margin="0,5">
                <TextBox Name="DescriptionBox" materialDesign:HintAssist.Hint="Опис рецепту" 
                         AcceptsReturn="True" TextWrapping="Wrap"/>
            </ScrollViewer>

            <StackPanel Orientation="Horizontal" Margin="0,5">
                <TextBox Name="ImagePathBox" Width="250" IsReadOnly="True"
                            materialDesign:HintAssist.Hint="Фото"/>
                <Button Content="Огляд..." Width="80" Margin="5,0,0,0" Click="BrowseImage_Click"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10">
                <Button Name="SaveButton" Content="Зберегти" Width="100" Margin="5" Click="SaveButton_Click"/>
                <Button Name="CancelButton" Content="Скасувати" Width="100" Margin="5" Click="CancelButton_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
